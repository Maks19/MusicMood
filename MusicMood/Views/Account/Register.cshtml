                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                </div>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "mr-3 form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new {  @class = "text-danger d-flex align-items-center" })
            </div>

