@model MusicMood.Models.RegisterModel

@{
    ViewBag.Title = "MusicMood";
    Layout = null;
}

<h2 style="text-align:center; padding:10px;">Register</h2>

@using (Html.BeginForm())
{
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">

    @Html.AntiForgeryToken()
    <div class="card bg-light">
        <div class="form-horizontal container">
            <h4 style="text-align:center; padding:20px;">RegisterModel</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group input-group">
                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                </div>
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "mr-3 form-control" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger d-flex align-items-center" })
            </div>

            <div class="form-group input-group">
                @Html.LabelFor(model => model.SecondName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
