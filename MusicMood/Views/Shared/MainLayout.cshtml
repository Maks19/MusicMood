<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/postmodernizm.css" rel="stylesheet" />
</head>
@{
    ViewBag.Title = "MainLayout";
}

@RenderSection("scripts", required: false)

<div>
    @Html.ActionLink("Главная", "Index", "Home")
    @Html.ActionLink("Плей-листы", "PlayLists", "Home")
    @if (User.Identity.IsAuthenticated)
    {
        @Html.ActionLink("Акаунт", "UserAccount", "Home")
        @Html.ActionLink("Выход", "Exit", "Home")
    }
    else
    {
        @Html.ActionLink("Вход", "Authorize", "Account")
    }
</div>
<main>
    @RenderBody()
</main>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
<script src="~/Scripts/postmodernizm.js"></script>
<script src="~/Scripts/helpjs.js"></script>
